{
  "schema": {
    "type": "object",
    "title": "Comment",
    "properties": {
      "name":  {
        "anyOf": [
          {
            "title": "Name",
            "type": "string"
          },
          {
            "title": "Age",
            "type": "number"
          }
        ]
      },
      "subforms":  {
        "type" : "array",
        "items" : {
          "anyOf" : [
            { "type" : "object", "properties" : { "name" : { "type" : "string" }}},
            { "type" : "object", "properties" : { "price" : { "type" : "number" } } }
          ]
        }
      },
      "a": {"type": "number"},
      "b": {"type": "string"},
      "c": {"type": "integer"}
    },
    "required": ["name","email","comment"]
  },
  "form": [
    {
      "type": "formselect",
      "key": "name",
      "items": [
        "name.{0}",
        {
          "key": "name.{1}",
          "placeholder": "Age instead"
        }
      ]
    },
    "subforms",
    {
      "type": "formselect",
      "title": "manually configured (no oneOf)",
      "titleMap": [
        {"name": "a and b", "value": 0},
        {"name": "c", "value": 1}
      ],
      "items": [
        ["a", "b"],
        "c"
      ]
    },
    {
      "type": "submit",
	  "style": "btn-info",
      "title": "OK"
    }
  ],
  "model": {
    "name": 7,
    "subforms": [{}]
  }
}
